{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@engine/*": ["engine/*"]
    },
    "target": "ES2021",
    "module": "CommonJS",  // Try switching to CommonJS if needed
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "engine"]
}
